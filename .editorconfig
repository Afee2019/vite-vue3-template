# Editor configuration, see http://editorconfig.org

# 表示是最顶层的 EditorConfig 配置文件
root =  true

[*]  # 表示所有文件适用
charset = utf-8
indent_style = space
indent_style = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false